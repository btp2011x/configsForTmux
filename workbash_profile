# change user icon, add git branch
parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/'
}
export PS1="\[\033[95m\]\w\033[93m\]$(parse_git_branch)\[\033[00m\] $ "
